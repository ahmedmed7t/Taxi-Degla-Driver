<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.crazynet.taxidegladriver.signActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/black"
        />

    <TextView
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="10dp"
        android:fontFamily="@font/gibsonregular"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingTop="12dp"
        android:text="التسجيل كسائق جديد"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"/>

    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="الأسم بالكامل"
        android:padding="4dp"
        android:textAlignment="viewStart"
        android:textColor="@color/darkGray"
        android:background="@drawable/white_button"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="270px"
        android:paddingLeft="15dp"
        android:fontFamily="@font/gibsonsemibold"
        />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="رقم الجوال"
        android:textColor="@color/darkGray"
        android:background="@drawable/white_button"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        app:layout_constraintTop_toBottomOf="@id/login_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="23dp"
        android:paddingLeft="15dp"
        android:fontFamily="@font/gibsonsemibold"
        android:inputType="phone"
        />

    <EditText
        android:id="@+id/car_model"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="موديل السياره"
        android:textColor="@color/darkGray"
        android:background="@drawable/white_button"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:paddingLeft="15dp"
        android:textAlignment="viewStart"
        android:fontFamily="@font/gibsonsemibold"
        app:layout_constraintTop_toBottomOf="@id/phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

   <EditText
       android:id="@+id/p_dat"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:hint="سنة انتاج السيارة"
       android:textColor="@color/darkGray"
       android:background="@drawable/white_button"
       android:layout_marginTop="23dp"
       android:layout_marginLeft="23dp"
       android:layout_marginRight="23dp"
       android:paddingLeft="23dp"
       android:textAlignment="viewStart"
       android:fontFamily="@font/gibsonsemibold"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/car_model"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/goldbutton"
        android:text="الاستمرار"
        android:textColor="@color/white"
        android:fontFamily="@font/gibsonsemibold"
        android:layout_marginRight="23dp"
        android:layout_marginLeft="23dp"
       app:layout_constraintTop_toBottomOf="@id/p_dat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="42dp"
        />


</android.support.constraint.ConstraintLayout>
